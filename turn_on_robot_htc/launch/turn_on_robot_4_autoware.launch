<launch>
    
    <!-- IMU 惯导类型 -->
    <arg name="htc_imu_mode" default="N100" />
    <!-- IMU 话题名称 -->
    <arg name="htc_imu_topic" default="/imu_raw"/>
    <!-- car -->
    <arg name="htc_car_mode" default="yunle_jd01" /> 

    <arg name="htc_odom_frame" default="odom_combined"/>
    

    <!-- IMU惯导控制节点 -->
    <include file="$(find turn_on_robot_htc)/launch/imu_htc.launch">
        <arg name="htc_imu_mode" value="$(arg htc_imu_mode)" />
        <arg name="htc_imu_topic" value="$(arg htc_imu_topic)"/>
    </include>

    <!-- Lidar LS_C16 -->
    <arg name="htc_lidar_mode" default="ls_C16" />
    <arg name="htc_lidar_points_topic" default="/points_raw" />
    <arg name="htc_lidar_frame" default="velodyne" />


    <!-- 激光雷达控制节点 -->
    <include file="$(find turn_on_robot_htc)/launch/lidar_htc.launch">
        <arg name="htc_lidar_mode" value="$(arg htc_lidar_mode)" />
        <arg name="htc_lidar_points_topic" value="$(arg htc_lidar_points_topic)" />
        <arg name="htc_lidar_frame" value="$(arg htc_lidar_frame)" />
    </include>

    <!-- tf -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_map"    args="0 0 0 0 0 0 /world /map 10" /> -->

    <!-- 底盘控制 -->
    <include file="$(find turn_on_robot_htc)/launch/include/base_serial.launch">
        <arg name="htc_car_mode" value="$(arg htc_car_mode)" /> 
        <arg name="htc_imu_mode" value="$(arg htc_imu_mode)" />
        <arg name="odom_frame_id"  value="$(arg htc_odom_frame)" />
    </include>

</launch>